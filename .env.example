# Nifty Scanner Configuration
# Copy this file to .env and fill in your Upstox credentials

# Upstox API Environment
# Options: uat (testing) or prod (production)
UPSTOX_ENV=uat

# OAuth2 Credentials (Get from Upstox Developer Console)
UPSTOX_CLIENT_ID=your_client_id_here
UPSTOX_CLIENT_SECRET=your_client_secret_here
UPSTOX_REDIRECT_URI=http://localhost:8080/cb

# Watchlist (comma-separated stock symbols)
WATCHLIST=RELIANCE,TCS,HDFCBANK,INFY,WIPRO

# App Settings
DEFAULT_TIMEFRAME=5minute
SCAN_INTERVAL_SECONDS=300
ENABLE_LIVE_MODE=true

# Logging
LOG_LEVEL=INFO
